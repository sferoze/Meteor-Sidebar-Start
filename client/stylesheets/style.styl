@import 'nib'

body, html
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  a, button
    outline 0
    &:focus, &:active
      outline 0
  color black
  font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight 400
  min-width 320px
  height 100%
  width 100%
  .modal-backdrop
    &.white-background
      background-color white
      opacity .98
    &.white-background-default-opacity
      background-color white
  ::-ms-clear
    display none
  .userPill
    .online 
      color #59DE59
    .offline
      color #8A8A8A
  #close-main-menu-backdrop
    position fixed
    cursor pointer
    width 100%
    height 100%
    background-color transparent
    z-index 500
    top 0 
    left 0
  input
    //font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, 'FontAwesome' !important
    font-family Arial,'FontAwesome' !important
    font-weight 400
  .unselectable
    -webkit-user-select none   
    -moz-user-select none
    -ms-user-select none
  .container-fluid
    height 100%
    padding-left 15px
    padding-right 15px
  #header 
    position fixed
    top 0px
    left 0px
    width 100%
    //margin-bottom 60px
    z-index 1000
    .container-fluid
      display block
  #main
    //transition all 300ms ease-out 
    padding-top 60px
    > .alert
      margin-left 30px
      margin-right 30px
    > .container-fluid
      transition all 285ms ease-out 
      height 100%
      padding-left 30px
      padding-right 30px
      //padding-top 10px
      //transition all 300ms ease-out 
        
  @media (max-width: 767px)
    #header
      position absolute

  @media (min-width: 769px)
    &.slide-menu-active
      #main 
        > .alert
          margin-left 280px
          margin-right 80px
        > .container-fluid
          transition all 300ms ease-out 
          padding-left 280px
